<%- include('header') -%>

    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">
      <% itemsList.forEach(item => { %> <!--'itemsList' is a list of MongoDB documents from the server and 'item' would be each individual document-->
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" onchange="this
            .form.submit()" value="<%= item._id %>">
            <p><%= item.name %></p><!--To access the 'name' path of a document, we use dot notation-->
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %>">
        </form>
        
      <% }); %> 
      
      <form action="/" method="post" class="item">
        <input type="text" name="listItem" value="" placeholder="Add new item..." autocomplete="off">
        <button type="submit" name="submitButton" class="button" value=<%= listTitle %>>+</button>
      </form>
    </div>

<%- include('footer') -%>